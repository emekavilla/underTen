<!DOCTYPE html>
<html lang="en">
  <% include ../partials/head.ejs %>
<body>
  <% include ../partials/header.ejs %>

  <% meals.forEach(function(meals) { %>
  <div class="row">
    <div class="col s12 m6">
      <div class="card #3949ab indigo darken-1">
        <div class="card-content h6 white-text">
          <ul>
            <li class="card-title"><%= meals.amount %></li>
            <li><%= meals.meal_name %></li>
            <li><%= meals.restaurant_name %></li>
            <li><%= meals.location %></li>
            <li><%= meals.review %></li>
            <li><%= meals.createdAt %></li>
          </ul>
        </div>
        <div class="card-action">

          <form action="<%= '/meals/' + meals.id + '?_method=DELETE' %>" method="POST">
            <input type="submit" value="Delete" />
          </form>
          <!-- <form action="<%='/meals/' + meals.id + '/edit' %>" method="POST">
            <input type="submit" value="Edit" />
          </form> -->
        </div>
      </div>
    </div>
  </div>
  <% }) %>
  <div>
    <a class="waves-effect waves-light btn-large #3949ab indigo darken-1" href="/meals/new">Add Meal</a>

    <a class="waves-effect waves-light btn-large #3949ab indigo darken-1 " href="/auth/logout">Log Out</a>
  </div>

  </br>
  </br>
  <% include ../partials/footer.ejs %>

  <!--Import jQuery before materialize.js-->
  <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.3/js/materialize.min.js"></script>
</body>
</html>
