<html lang="en">
  <% include ../partials/head.ejs %>
<body>
  <% include ../partials/header.ejs %>
   <div class="row">
      <form class="col s12" action="/meals" method="POST">
        <div class="row">
          <div class="input-field col s6">
            <input name="amount" type="text" class="validate" placeholder="Price">
          </div>
          <div class="input-field col s6">
            <input name="meal_name" type="text" class="validate" placeholder="Meal">
          </div>
        </div>

